@model ShippingDetailsViewModel
@{
    ViewData["Title"] = "Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Complete</h1>

<form asp-controller="Cart" asp-action="Complete" method="post">
    <div class="form-group">
        <label asp-for="ShippingDetail.FirstName">Ad</label>
        <input type="text" asp-for="ShippingDetail.FirstName" class="form-control" placeholder="Müşteri Adı" />
        <span asp-validation-for="ShippingDetail.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.LastName">Soyad</label>
        <input type="text" asp-for="ShippingDetail.LastName" class="form-control" placeholder="Müşteri Soyad" />
        <span asp-validation-for="ShippingDetail.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Email">E-posta</label>
        <input type="text" asp-for="ShippingDetail.Email" class="form-control" placeholder="E-posta" />
        <span asp-validation-for="ShippingDetail.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Age">Yaş</label>
        <input type="text" asp-for="ShippingDetail.Age" class="form-control" placeholder="Müşteri Yaş" />
        <span asp-validation-for="ShippingDetail.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.City">Şehir</label>
        <input type="text" asp-for="ShippingDetail.City" class="form-control" placeholder="Yaşadığınız Şehir" />
        <span asp-validation-for="ShippingDetail.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Address">Adres</label>
        <input type="text" asp-for="ShippingDetail.Address" class="form-control" placeholder="Adres" />
        <span asp-validation-for="ShippingDetail.Address" class="text-danger"></span>
    </div>
    <input type="submit" name="name" value="Kaydet" class="btn btn-sm btn-success" />
</form>

