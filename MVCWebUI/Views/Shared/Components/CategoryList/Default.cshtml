@model CategoryListViewModel


<h1>Kategori</h1>


<div class="list-group">
    <a href="/Product/Index/" class="list-group-item">Tüm Ürünler</a>

    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryID == Model.CurrentCategory)
        {
            css += " active";

        }
        <a href="/Product/Index?category=@item.CategoryID" class="@css">@item.CategoryName</a>
    }

</div>
       
  

